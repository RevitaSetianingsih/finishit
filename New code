#include <iostream>
using namespace std;
void func (int *pa, int n){
		for(int j=0; j<n; j++){
	 	if(*(pa+j)%2 == 0){
	 		cout<<*(pa+j)<<" merupakan bilangan genap"<<endl;
		 }
		 else{
		 	cout<<*(pa+j)<<" merupakan bilangan ganjil"<<endl;
		 }
	}}
int main(){
