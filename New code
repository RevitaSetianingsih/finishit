#include <iostream>
using namespace std;
void func (int *pa, int a){
		for(int j=0; j<a; j++){
	 	if(*(pa+j)%2 == 0){
	 		cout<<*(pa+j)<<" merupakan bilangan genap"<<endl;
		 }
		 else{
		 	cout<<*(pa+j)<<" merupakan bilangan ganjil"<<endl;
		 }
	}}
int main(){
int n;
cout<<"Input banyak data yang akan dimasukkan = ";
cin>>n;
int a[n];
cout<<"input data = ";
for(int i=0; i<n; i++){
cin >> a[i];
	}
	func (a, n);
	return 0;
}
